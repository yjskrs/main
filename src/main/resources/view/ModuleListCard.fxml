<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="5" left="15" right="5" top="5" />
      </padding>
      <HBox alignment="CENTER_LEFT" spacing="5">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="title" styleClass="cell_big_label" text="\$first" />
      </HBox>
      <FlowPane fx:id="tags" style="-fx-background-color: #3d3d3d;" />
         <HBox prefHeight="100.0" prefWidth="400.0" VBox.vgrow="ALWAYS">
            <children>
               <ImageView fitHeight="90.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true" scaleX="0.6" scaleY="0.6" scaleZ="0.6">
                  <image>
                     <Image url="@../images/info_icon.png" />
                  </image>
                  <HBox.margin>
                     <Insets right="10.0" />
                  </HBox.margin>
               </ImageView>
               <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                  <children>
                  <Label fx:id="moduleCode" styleClass="cell_small_label" text="\$moduleCode" />
                  <Label fx:id="credits" styleClass="cell_small_label" text="\$credits" />
                  <Label fx:id="memo" styleClass="cell_small_label" text="\$memo" />
                  <Label fx:id="semester" styleClass="cell_small_label" text="\$semester" />
                  <Label fx:id="description" styleClass="cell_small_label" text="\$description" />
                  </children>
               </VBox>
            </children>
         </HBox>
    </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
</HBox>
